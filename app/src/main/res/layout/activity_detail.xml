<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.udacity.sandwichclub.DetailActivity">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/paddingSandwichImageTop"
            android:layout_marginBottom="@dimen/paddingBottom"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <!-- description label and field -->
        <TextView
            android:id="@+id/detail_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_iv"
            android:paddingLeft="@dimen/paddingLeft"
            android:text="@string/detail_description_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_description_label"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingBottom="@dimen/paddingBottom" />

        <!-- origin label and field -->

        <TextView
            android:id="@+id/detail_place_of_origin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_tv"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/paddingLeft"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_place_of_origin_label"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingBottom="@dimen/paddingBottom" />

        <!-- aka label and field -->
        <TextView
            android:id="@+id/detail_also_known_as_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin_tv"
            android:paddingLeft="@dimen/paddingLeft"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_also_known_as_label"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingBottom="@dimen/paddingBottom" />

        <!-- ingredients label and field -->
        <TextView
            android:id="@+id/detail_ingredients_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/also_known_tv"
            android:paddingLeft="@dimen/paddingLeft"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/ingredients_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_ingredients_label"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingBottom="@dimen/paddingBottom" />
    </RelativeLayout>
</ScrollView>